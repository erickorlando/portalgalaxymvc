@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppGalaxy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortalGalaxy.WebMvc.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/assets/images/favicon.png" />
</head>
<body>
    <partial name="_Header" />
    <div class="row justify-content-end m-auto">
        PartialView
    </div>
    <div class="container-fluid">
        <div class="row gx-2">
            <div class="col-md-2 d-none d-md-block" id="menu">
                <aside class="d-flex flex-column flex-shrink-0 p-1 bg-light">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page">
                                <i class="bi bi-house"></i>
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Categoria" asp-action="Index" class="nav-link">
                                <i class="bi bi-archive"></i>
                                Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Taller" asp-action="Index" class="nav-link link-dark">
                                <i class="bi bi-tools"></i>
                                Talleres
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link link-dark">
                                <i class="bi bi-people"></i>
                                Inscripciones
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link link-dark">
                                <i class="bi bi-reception-4"></i>
                                Reportes
                            </a>
                        </li>

                    </ul>
                </aside>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
